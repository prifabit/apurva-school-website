---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const facilities = [
	{ 
		icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>',
		en: 'Residential hostel facilities', 
		mr: 'निवासी वसतिगृह व्यवस्था' 
	},
	{ 
		icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path></svg>',
		en: 'Nutritious and balanced meals', 
		mr: 'पौष्टिक व संतुलित आहार व्यवस्था' 
	},
	{ 
		icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>',
		en: 'Regular medical checkups', 
		mr: 'नियमित वैद्यकीय तपासणी' 
	},
	{ 
		icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>',
		en: 'Trained special educators', 
		mr: 'प्रशिक्षित विशेष शिक्षक' 
	},
	{ 
		icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
		en: 'Sports and recreation', 
		mr: 'खेळ आणि मनोरंजन सुविधा' 
	},
	{ 
		icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>',
		en: 'Safe and secure campus', 
		mr: 'सुरक्षित आणि संरक्षित परिसर' 
	}
];
---

<Layout title={t('nav.facilities')}>
	<Header slot="header" />
	
	<div class="max-w-5xl mx-auto py-12 px-4">
		<h1 class="text-4xl font-bold mb-12 text-center text-[var(--foreground)]">{t('nav.facilities')}</h1>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			{facilities.map(facility => (
				<div class="card flex items-start gap-4 hover:shadow-md">
					<div class="w-12 h-12 rounded-xl bg-[var(--primary)] bg-opacity-10 flex items-center justify-center text-[var(--primary)] flex-shrink-0">
						<Fragment set:html={facility.icon} />
					</div>
					<span class="text-lg font-semibold text-[var(--foreground)] pt-2">{lang === 'en' ? facility.en : facility.mr}</span>
				</div>
			))}
		</div>
	</div>

	<Footer slot="footer" />
</Layout>
